<!DOCTYPE html>
<html>
  <head>
    <title>CvShareApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <% if current_user %>
      <header class="topbar">
        <div class="logo">
          CV Share
        </div>

        <nav class="nav-links">
          <%= link_to "Dashboard", dashboard_path %>
          <%= link_to "Shared Links", share_links_path %>

          <div class="user-dropdown">
            <button id="profileBtn" class="profile-btn">
              <%= current_user.email %> â–¼
            </button>

            <div id="profileMenu" class="dropdown-menu hidden">
              <%= button_to "Logout",
                    logout_path,
                    method: :delete,
                    class: "dropdown-item",
                    form: { data: { turbo: false } } %>
            </div>
          </div>
        </nav>
      </header>
    <% end %>

    <main class="main-content">
      <%= yield %>
    </main>
  </body>
</html>
