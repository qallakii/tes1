<h1 class="text-3xl font-bold mb-6">Create New Folder</h1>

<div class="max-w-md bg-white shadow rounded p-6">
  <%= form_with(model: @folder, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Create Folder", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "Back to Folders", folders_path, class: "text-blue-600 hover:underline" %>
</div>
