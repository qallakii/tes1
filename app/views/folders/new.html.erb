<div class="max-w-lg mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-2xl font-bold mb-4 text-gray-700">Create New Folder</h2>

  <%= form_with(model: @folder, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.text_field :name, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Create Folder", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>

  <%= link_to "Back to Folders", folders_path, class: "text-blue-600 mt-4 inline-block hover:underline" %>
</div>
