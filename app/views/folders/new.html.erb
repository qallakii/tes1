<div class="auth-page">
  <div class="auth-card">
    <h2>Create New Folder</h2>

    <%= form_with(model: @folder, local: true) do |form| %>
      <!-- âœ… keeps nesting working -->
      <%= form.hidden_field :parent_id %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "Folder Name" %>
      </div>

      <div class="actions" style="text-align:center;">
        <%= form.submit "Create Folder", class: "btn primary" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <% back_path = @folder.parent_id.present? ? folder_path(@folder.parent_id) : dashboard_path %>
      <%= link_to "Back", back_path, class: "btn secondary" %>
    </div>
  </div>
</div>
