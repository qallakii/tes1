<h2>Create New Folder</h2>

<%= link_to "Back to Folders", folders_path %>

<div class="form-container">
  <%= form_with(model: @folder, local: true) do |f| %>
    <% if @folder.errors.any? %>
      <div class="flash flash-alert">
        <h4><%= pluralize(@folder.errors.count, "error") %> prevented this folder from being saved:</h4>
        <ul>
          <% @folder.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "input-field" %>
    </div>

    <div>
      <%= f.submit "Create Folder", class: "btn-green" %>
    </div>
  <% end %>
</div>
