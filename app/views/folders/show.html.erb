<div class="dashboard-page">
  <div class="breadcrumb-bar">
    <button class="btn secondary" onclick="window.history.back()">‚Üê Back</button>
    <span><%= @folder.name %></span>
  </div>

  <h1><%= @folder.name %> - CVs</h1>

  <% if @cvs.any? %>
    <div class="cvs-container">
      <% @cvs.each do |cv| %>
        <div class="cv-card">
          <h2><%= cv.title %></h2>
          <p><%= cv.file.filename %></p>
          <div class="cv-actions">
            <%= link_to "Download", rails_blob_path(cv.file, disposition: "attachment"), class: "btn secondary" %>
            <%= link_to "Delete", folder_cv_path(@folder, cv), method: :delete, data: { confirm: "Are you sure?" }, class: "btn secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="empty-message">No CVs yet. <%= link_to "Upload one", new_folder_cv_path(@folder) %></p>
  <% end %>

  <div style="text-align:center; margin-top:20px; display:flex; justify-content:center; gap:12px;">
  <%= link_to "Upload CV", new_folder_cv_path(@folder), class: "btn primary" %>

  <%= button_to "Share Folder",
        share_links_path(folder_id: @folder.id),
        method: :post,
        class: "btn primary" %>
</div>

</div>
