<h2>Folder: <%= @folder.name %></h2>

<p>
  <%= link_to "Back to Folders", folders_path %> |
  <%= link_to "Upload New CV", new_folder_cv_path(@folder), class: "btn-blue" %>
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Uploaded At</th>
      <th>File</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cvs.each do |cv| %>
      <tr>
        <td><%= cv.title %></td>
        <td><%= cv.created_at.strftime("%d %b %Y %H:%M") %></td>
        <td>
          <% if cv.file.attached? %>
            <%= link_to "Download", rails_blob_path(cv.file, disposition: "attachment") %>
            <% if cv.file.content_type == "application/pdf" %>
              | <%= link_to "Preview", rails_blob_path(cv.file, disposition: "inline"), target: "_blank" %>
            <% end %>
          <% else %>
            No file
          <% end %>
        </td>
        <td>
          <%= link_to "Delete", folder_cv_path(@folder, cv), method: :delete, data: { confirm: "Are you sure?" }, class: "btn-red" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
