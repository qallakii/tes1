<div class="dashboard-page">
  <div class="breadcrumb-bar">
    <span>Dashboard</span>
  </div>

  <h1>Your Folders</h1>

  <% if @folders.any? %>
    <div class="folders-container">
      <% @folders.each do |folder| %>
        <div class="folder-card">
          <h2><%= link_to folder.name, folder_path(folder) %></h2>
          <p><%= pluralize(folder.cvs.count, "CV") %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="empty-message">
      You donâ€™t have any folders yet. <%= link_to "Create one", new_folder_path %>
    </p>
  <% end %>

  <div style="text-align:center; margin-top:20px;">
    <%= link_to "Create New Folder", new_folder_path, class: "btn primary" %>
  </div>
</div>
