<h1>Folders</h1>
<%= link_to "New Folder", new_folder_path, class: "button" %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.name %></td>
        <td>
          <%= link_to "Show", folder_path(folder), class: "button" %>
          <%= link_to "Edit", edit_folder_path(folder), class: "button" %>
          <%= link_to "Delete", folder_path(folder), method: :delete, data: { confirm: "Are you sure?" }, class: "button" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
