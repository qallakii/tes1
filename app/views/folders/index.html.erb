<h1 class="text-3xl font-bold mb-6 text-gray-800">Folders</h1>

<%= link_to "New Folder", new_folder_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mb-4 inline-block" %>

<table class="min-w-full bg-white border border-gray-200 shadow rounded">
  <thead>
    <tr class="bg-gray-100 text-gray-700">
      <th class="py-2 px-4 border-b">Name</th>
      <th class="py-2 px-4 border-b">Created At</th>
      <th class="py-2 px-4 border-b">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @folders.each do |folder| %>
      <tr class="hover:bg-gray-50">
        <td class="py-2 px-4 border-b"><%= folder.name %></td>
        <td class="py-2 px-4 border-b"><%= folder.created_at.strftime("%d %b %Y") %></td>
        <td class="py-2 px-4 border-b space-x-2">
          <%= link_to "Show", folder_path(folder), class: "text-blue-600 hover:underline" %>
          <%= link_to "Edit", edit_folder_path(folder), class: "text-green-600 hover:underline" %>
          <%= link_to "Delete", folder_path(folder), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
