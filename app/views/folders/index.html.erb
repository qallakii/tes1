<h1 class="text-3xl font-bold mb-6">Your Folders</h1>

<div class="flex justify-end mb-4">
  <%= link_to "New Folder", new_folder_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
</div>

<% if @folders.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @folders.each do |folder| %>
      <div class="bg-white shadow rounded p-4 flex flex-col justify-between">
        <div>
          <h2 class="text-xl font-semibold mb-2"><%= folder.name %></h2>
          <p class="text-gray-600 mb-2"><%= folder.cvs.count %> CV(s)</p>
        </div>
        <div class="flex justify-between mt-4">
          <%= link_to "View", folder_path(folder), class: "text-white bg-green-600 px-3 py-1 rounded hover:bg-green-700 transition" %>
          <%= link_to "Delete", folder_path(folder), method: :delete, data: { confirm: "Are you sure?" }, class: "text-white bg-red-600 px-3 py-1 rounded hover:bg-red-700 transition" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-700">No folders found. Create one using the button above.</p>
<% end %>
