<div class="dashboard-page">
  <div class="breadcrumb-bar">
    <button class="btn secondary" onclick="window.history.back()">‚Üê Back</button>
    <span>Shared Folder: <%= @folder.name %></span>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>CV Title</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cvs.each do |cv| %>
        <tr>
          <td><%= cv.title %></td>
          <td>
            <%= link_to "Download", rails_blob_path(cv.file, disposition: "attachment"), class: "button" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
