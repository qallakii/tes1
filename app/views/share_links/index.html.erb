<h1 class="text-3xl font-bold mb-6 text-gray-800">Share Links</h1>

<%= link_to "New Share Link", new_share_link_path, class: "bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 mb-4 inline-block" %>

<table class="min-w-full bg-white border border-gray-200 shadow rounded">
  <thead>
    <tr class="bg-gray-100 text-gray-700">
      <th class="py-2 px-4 border-b">CV</th>
      <th class="py-2 px-4 border-b">Link</th>
      <th class="py-2 px-4 border-b">Expires At</th>
      <th class="py-2 px-4 border-b">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @share_links.each do |link| %>
      <tr class="hover:bg-gray-50">
        <td class="py-2 px-4 border-b"><%= link.cv.filename if link.cv %></td>
        <td class="py-2 px-4 border-b break-all"><%= link_to link.url, link.url, target: "_blank", class: "text-blue-600 hover:underline" %></td>
        <td class="py-2 px-4 border-b"><%= link.expires_at.strftime("%d %b %Y %H:%M") if link.expires_at %></td>
        <td class="py-2 px-4 border-b space-x-2">
          <%= link_to "Delete", share_link_path(link), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
