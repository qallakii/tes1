<h1 class="text-3xl font-bold mb-6"><%= @cv.title %></h1>

<div class="bg-white shadow rounded p-6 max-w-2xl">
  <p class="text-gray-700 mb-2"><strong>Folder:</strong> <%= @cv.folder.name %></p>
  <p class="text-gray-700 mb-2"><strong>Uploaded by:</strong> <%= @cv.user.email %></p>
  <p class="text-gray-700 mb-2"><strong>Created at:</strong> <%= @cv.created_at.strftime("%d %b %Y") %></p>

  <div class="mt-4">
    <%= link_to "Download CV", rails_blob_path(@cv.file, disposition: "attachment"), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
  </div>

  <div class="mt-6">
    <h2 class="text-xl font-semibold mb-2">Rate this CV</h2>
    <%= form_with url: cv_ratings_path(@cv), method: :post, local: true do |f| %>
      <div class="flex items-center space-x-2">
        <%= number_field_tag :stars, 5, in: 1..5, class: "border rounded px-2 py-1 w-16" %>
        <%= f.submit "Submit Rating", class: "bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700 transition" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to "Back to Folder", folder_path(@cv.folder), class: "text-blue-600 hover:underline" %>
  </div>
</div>
