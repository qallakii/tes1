<h2>Upload New CV in "<%= @folder.name %>"</h2>

<%= form_with model: [@folder, @cv], local: true, html: { multipart: true } do |f| %>
  <div style="margin-bottom: 10px;">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "border rounded px-2 py-1 w-full" %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= f.label :file %><br>
    <%= f.file_field :file, class: "border rounded px-2 py-1 w-full" %>
  </div>

  <div>
    <%= f.submit "Upload CV", class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded" %>
    <%= link_to "Back to Folder", folder_path(@folder), class: "ml-2 text-gray-700 hover:underline" %>
  </div>
<% end %>

<% if flash[:notice] %>
  <p style="color: green; margin-top: 10px;"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p style="color: red; margin-top: 10px;"><%= flash[:alert] %></p>
<% end %>
