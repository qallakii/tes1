<div class="auth-page">
  <div class="auth-card">
    <h2>Upload CV to <%= @folder.name %></h2>

    <%= form_with(model: [@folder, @cv], local: true) do |form| %>
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, placeholder: "CV Title" %>
      </div>

      <div class="field">
        <%= form.label :file %>
        <%= form.file_field :file %>
      </div>

      <div class="actions" style="text-align:center;">
        <%= form.submit "Upload CV", class: "btn primary" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <%= link_to "Back to Folder", folder_path(@folder) %>
    </div>
  </div>
</div>
