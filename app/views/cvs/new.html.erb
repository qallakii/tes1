<div class="auth-page">
  <div class="auth-card">
    <div class="breadcrumb-bar">
      <button class="btn secondary" onclick="window.history.back()">‚Üê Back</button>
      <span>Upload CV to <%= @folder.name %></span>
    </div>

    <%= form_with(model: [@folder, @cv], local: true) do |form| %>
      <div class="field">
        <%= form.label :file %>
        <%= form.file_field :file %>
      </div>

      <div class="actions" style="text-align:center;">
        <%= form.submit "Upload CV", class: "btn primary" %>
      </div>
    <% end %>
  </div>
</div>
