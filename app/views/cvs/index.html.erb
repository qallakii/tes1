<div class="dashboard-page">
  <h1>CVs in <%= @folder.name %></h1>

  <% if @cvs.any? %>
    <div class="cvs-container">
      <% @cvs.each do |cv| %>
        <div class="cv-card">
          <h2><%= cv.title %></h2>
          <p><%= cv.file.filename %></p>
          <div class="cv-actions">
            <%= link_to "Download", rails_blob_path(cv.file, disposition: "attachment"), class: "btn secondary" %>
            <%= link_to "Delete", cv_path(cv), method: :delete, data: { confirm: "Are you sure?" }, class: "btn secondary" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="empty-message">No CVs yet. <%= link_to "Upload one", new_cv_path(folder_id: @folder.id) %></p>
  <% end %>
</div>
