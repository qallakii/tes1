<h1 class="text-3xl font-bold mb-6 text-gray-800">CVs</h1>

<%= link_to "Upload CV", new_cv_path, class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 mb-4 inline-block" %>

<table class="min-w-full bg-white border border-gray-200 shadow rounded">
  <thead>
    <tr class="bg-gray-100 text-gray-700">
      <th class="py-2 px-4 border-b">Filename</th>
      <th class="py-2 px-4 border-b">Folder</th>
      <th class="py-2 px-4 border-b">Uploaded At</th>
      <th class="py-2 px-4 border-b">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cvs.each do |cv| %>
      <tr class="hover:bg-gray-50">
        <td class="py-2 px-4 border-b"><%= cv.filename %></td>
        <td class="py-2 px-4 border-b"><%= cv.folder.name if cv.folder %></td>
        <td class="py-2 px-4 border-b"><%= cv.created_at.strftime("%d %b %Y") %></td>
        <td class="py-2 px-4 border-b space-x-2">
          <%= link_to "View", cv_path(cv), class: "text-blue-600 hover:underline" %>
          <%= link_to "Delete", cv_path(cv), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
