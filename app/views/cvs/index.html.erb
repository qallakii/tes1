<h1 class="text-3xl font-bold mb-6">CVs in <%= @folder.name %></h1>

<div class="flex justify-between mb-4">
  <%= link_to "Upload New CV", new_cv_path(folder_id: @folder.id), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
  <%= link_to "Back to Folders", folders_path, class: "text-gray-600 hover:underline" %>
</div>

<% if @cvs.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @cvs.each do |cv| %>
      <div class="bg-white shadow rounded p-4 flex flex-col justify-between">
        <div>
          <h2 class="text-xl font-semibold mb-2"><%= cv.title %></h2>
          <p class="text-gray-600 mb-2">Uploaded by: <%= cv.user.email %></p>
          <p class="text-gray-600 mb-2">Created at: <%= cv.created_at.strftime("%d %b %Y") %></p>
        </div>
        <div class="flex justify-between mt-4">
          <%= link_to "View / Download", cv_path(cv), class: "text-white bg-green-600 px-3 py-1 rounded hover:bg-green-700 transition" %>
          <%= link_to "Delete", cv_path(cv), method: :delete, data: { confirm: "Are you sure?" }, class: "text-white bg-red-600 px-3 py-1 rounded hover:bg-red-700 transition" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-700">No CVs found in this folder. Upload one using the button above.</p>
<% end %>
