<div class="auth-page">
  <div class="auth-card">
    <h2>Login</h2>

    <%= form_with(url: login_path, local: true) do |form| %>
      <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: "Enter your email" %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: "Enter your password" %>
      </div>

      <div class="actions" style="text-align:center;">
        <%= form.submit "Login", class: "btn primary" %>
      </div>
    <% end %>

    <div class="auth-footer">
      <p>Don't have an account? <%= link_to "Sign Up", signup_path %></p>
    </div>
  </div>
</div>
