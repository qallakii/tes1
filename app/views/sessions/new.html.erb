<h2>Login</h2>

<%= form_with url: login_path, local: true do |f| %>
  <div>
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= submit_tag "Login" %>
  </div>
<% end %>

<% if flash[:notice] %>
  <p style="color: green;"><%= flash[:notice] %></p>
<% end %>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>
