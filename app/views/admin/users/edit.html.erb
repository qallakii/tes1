<div class="page-head">
  <div>
    <h1 class="page-title">Edit user</h1>
    <div class="page-sub"><%= @user.email %></div>
  </div>

  <div style="display:flex; gap:10px; flex-wrap:wrap;">
    <%= link_to "Back", admin_users_path, class: "btn" %>
  </div>
</div>

<div class="card card-pad" style="max-width:560px;">
  <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true) do |f| %>
    <div class="form-row">
      <label class="label">Name</label>
      <%= f.text_field :name, class: "input" %>
    </div>

    <div class="form-row">
      <label class="label">Admin</label>
      <div style="display:flex; align-items:center; gap:10px;">
        <%= f.check_box :admin %>
        <span class="page-sub" style="margin:0;">Allow access to /admin</span>
      </div>
    </div>

    <div style="display:flex; gap:10px; flex-wrap:wrap;">
      <%= f.submit "Save", class: "btn primary" %>
      <%= link_to "Cancel", admin_users_path, class: "btn" %>
    </div>
  <% end %>
</div>
