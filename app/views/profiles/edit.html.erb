<div class="dashboard-page">
  <div class="drive-page-head">
    <div class="drive-head-left">
      <h2 style="margin:0;">Settings</h2>
    </div>
    <div class="drive-head-right">
      <%= link_to "Back", profile_path, class: "btn secondary" %>
    </div>
  </div>

  <div class="drive-card" style="padding:16px;">
    <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
      <div style="display:grid; gap:12px; max-width:640px;">
        <div>
          <%= f.label :name, style: "display:block; font-size:13px; margin-bottom:6px;" %>
          <%= f.text_field :name, class: "drive-input", style: "width:100%;" %>
        </div>

        <div>
          <%= f.label :email, style: "display:block; font-size:13px; margin-bottom:6px;" %>
          <%= f.email_field :email, class: "drive-input", style: "width:100%;" %>
        </div>

        <div style="padding:12px; border:1px solid rgba(0,0,0,0.08); border-radius:12px;">
          <div style="font-weight:600; margin-bottom:6px;">Change password (optional)</div>
          <div class="muted" style="font-size:13px; margin-bottom:10px;">Leave blank to keep your current password.</div>

          <div style="display:grid; gap:12px;">
            <div>
              <%= f.label :password, style: "display:block; font-size:13px; margin-bottom:6px;" %>
              <%= f.password_field :password, class: "drive-input", style: "width:100%;" %>
            </div>
            <div>
              <%= f.label :password_confirmation, style: "display:block; font-size:13px; margin-bottom:6px;" %>
              <%= f.password_field :password_confirmation, class: "drive-input", style: "width:100%;" %>
            </div>
          </div>
        </div>

        <div style="display:flex; justify-content:flex-end; gap:10px;">
          <%= f.submit "Save", class: "btn primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
